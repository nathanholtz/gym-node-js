{{#if search}}
<h1>Buscando por: {{search}}</h1>
{{else}}
<h1>Meus Exercícios</h1>
{{/if}}
<div class="search-control">
    <form action="/treino" method="get">
        <input type="text" name="search" placeholder="Buscar exercício">
        <input type="submit" class="btn" value="Buscar">
    </form>
    <div class="order-container">
        <span>Ordenar por:</span>
        <form action="/treino" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="new">
            <button type="submit"><i class="bi bi-arrow-up"></i></button>
        </form>
        <form action="/treino" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="old">
            <button type="submit"> <i class="bi bi-arrow-down"></i></button>
        </form>
        <a href="/treino">Limpar</a>
    </div>
</div>
<ul class="treino-list">
    {{#each treino}}
    <li>

        <a href="/treino/details/{{this.id}}" class="name">{{this.name}}</a>

        <!--<div class="created">{{this.createdAt}}</div> -->

        <div class="actions">

            <button type="submit">

                <a href="/treino/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>

            </button>

            <form action="/treino/delete" method="post">

                <input type="hidden" name="id" value={{this.id}}>

                <button type="submit">

                    <i class="bi bi-x-square"></i>

                </button>

            </form>
        </div>
    </li>
    {{/each}}
</ul>
<div class="empty">
    {{#if emptyTreino}}
    <p>Você não possui exercícios, <a href="/treino/add">Adicione aqui!</a></p>
    {{/if}}
</div>